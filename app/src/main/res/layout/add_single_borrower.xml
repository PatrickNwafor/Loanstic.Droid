<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.icubed.loansticdroid.activities.AddSingleBorrower"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:elevation="4dp"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/whiteEnd"

    android:orientation="vertical">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="52dp"
            android:hint="First Name"
            tools:layout_editor_absoluteX="89dp" />
    <EditText
        android:id="@+id/middle_name"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="52dp"
        android:hint="Middle Name"
        tools:layout_editor_absoluteX="89dp" />
    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="52dp"
        android:hint="Last Name"
        tools:layout_editor_absoluteX="89dp" />

    <Spinner
        android:id="@+id/spSex"
        android:layout_width="match_parent"
        android:layout_height="36dp"

        tools:listitem="@android:layout/simple_spinner_item"
        android:layout_marginTop="5dp" />
    <Spinner
        android:id="@+id/input_citizenship"
        android:layout_width="match_parent"
        android:layout_height="36dp"

        tools:listitem="@android:layout/simple_spinner_item"
        android:layout_marginTop="5dp" />


    <EditText
        android:id="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="text" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/date_of_birth"
        android:hint="Date of Birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/home_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home Address" />
    <EditText
        android:id="@+id/business_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Business Address" />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City" />

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Province/State" />

    <EditText
        android:id="@+id/zip_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Zip Code" />

    <EditText
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Business Name" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/start_camera_button"
        android:layout_width="wrap_content"
        android:textColor="@color/whiteEnd"
        android:padding="10dp"
        android:background="@drawable/loan_button_back"
        android:layout_height="wrap_content"
        android:text="Borrower Photo"
        android:clickable="true"
        android:onClick="start_camera"/>

    <ImageView
        android:id="@+id/borrower_image"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_person_black_24dp" />

</LinearLayout>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:ems="10"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/borrower_files"
        android:layout_width="wrap_content"
        android:textColor="@color/whiteEnd"
        android:padding="14dp"
        android:background="@drawable/loan_button_back"
        android:layout_height="wrap_content"
        android:text="Borrower Files"
        android:clickable="true"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/borrower_business_location"
        />


</LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:textColor="@color/whiteEnd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"

        android:background="@drawable/saving_button_back"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:clickable="true"
        />
</RelativeLayout>
