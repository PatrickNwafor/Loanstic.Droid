<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icubed.loansticdroid.activities.LoanEditPage">
    <include
        android:id="@+id/borrower_toolbar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:sbg_animateSelector="bounce"
        app:sbg_backgroundColor="@color/whiteEnd"
        app:sbg_dividerColor="@color/colorPrimary"
        app:sbg_dividerPadding="10dp"
        app:sbg_dividerSize="1dp"
        app:sbg_position="0"
        app:sbg_radius="2dp"
        app:sbg_ripple="true"
        app:sbg_rippleColor="@color/colorPrimary"
        app:sbg_selectorColor="@color/colorPrimary"
        app:sbg_selectorTextColor="@color/whiteEnd"
        app:sbg_shadow="true"
        app:sbg_shadowElevation="3dp"
        app:sbg_shadowMargin="4dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/Collections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Collections"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/LoanTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Loan Terms"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/LoanSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Loan Schedule"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/LoanColateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Loan Collateral"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/LoanFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Loan Files"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/LoanComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:text="Loan Comments"
            android:textAllCaps="false" />


    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

</android.support.constraint.ConstraintLayout>
